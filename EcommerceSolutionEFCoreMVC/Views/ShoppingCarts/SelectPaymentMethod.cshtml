@using EcommerceSolutionEFCoreMVC.Models.Enums
@model PaymentMethod

<h2 class="text-center">Escolha o Método de Pagamento</h2>

<form asp-controller="ShoppingCarts" asp-action="SelectPaymentMethod" method="post" class="container my-4">
    @foreach (var method in Enum.GetValues(typeof(PaymentMethod)).Cast<PaymentMethod>())
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" value="@Convert.ToInt32(method)" required />
            <label class="form-check-label">@method</label>
        </div>
    }
    <button type="submit" class="btn btn-primary mt-3">Selecionar Pagamento</button>
</form>

