@using EcommerceSolutionEFCoreMVC.Models.Entities
@using EcommerceSolutionEFCoreMVC.Models.ViewModels
@using Microsoft.AspNetCore.Identity

@model ShoppingCart

@{
    ViewData["Title"] = "Meu Carrinho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Meu Carrinho</h1>

@if (Model?.ShoppingCartItems?.Any() == true)
{
    <table class="table">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço Unitário</th>
                <th>Subtotal</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateProductQuantity" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control d-inline" style="width: 60px;" />
                            <button type="submit" class="btn btn-sm btn-primary">Atualizar</button>
                        </form>
                    </td>                    
                    <td>@item.Subtotal.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveProduct" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remover</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>        
    </table>

        <h4>Total: @Model.ShoppingCartItems.Sum(i => i.Subtotal).ToString("C")</h4>

    <form asp-action="Checkout" method="post">
        <button type="submit" class="btn btn-success">Finalizar Compra</button>
        <a asp-controller="Home" asp-action="Index">Back to Home</a>
    </form>
}
else
{
    <p>Seu carrinho está vazio.</p>
}
