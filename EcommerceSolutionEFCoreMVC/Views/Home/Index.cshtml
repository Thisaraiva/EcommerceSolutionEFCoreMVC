@model IEnumerable<EcommerceSolutionEFCoreMVC.Models.Entities.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Maruin Store</h1>
    <p>Explore our amazing collection of products below.</p>
</div>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="max-height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Price.ToString("C")</p>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-primary w-100">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
