@using EcommerceSolutionEFCoreMVC.Models.Entities
@model RoleEdit

<h1 class="bg-info text-white">Update Role</h1>
<a asp-action="Index" class="btn btn-secondary">Return</a>
<div aps-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" name="holeName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <h2 class="bg-info p-1 text-white">Incluir na Role: @Model.Role.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">All users belong to this role </td></tr>
        }
        else
        {
            @foreach(ApplicationUser user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input typo="checkbox" name="AddIds" value="@user.Id" />
                    </td>
                </tr>
            }
        }
    </table>
    <h2 class="bg-info p-1 text-white">Remove from Role: @Model.Role.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">There are no users in this role!</td></tr>
        }
        else
        {
            @foreach(ApplicationUser user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="DeleteIds" value="@user.Id" />
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>