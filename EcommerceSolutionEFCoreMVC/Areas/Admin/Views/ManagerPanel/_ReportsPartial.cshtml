@using EcommerceSolutionEFCoreMVC.Areas.Admin.Models.ViewModels
@model ReportDataViewModel

<div class="card p-4 shadow-sm">
    <h4 class="card-title text-center mb-4"><i class="bi bi-graph-up"></i> Sales Overview</h4>

    <div class="mb-3">
        <h5 class="text-primary"><i class="bi bi-bag-check-fill"></i> Total Orders:</h5>
        <p class="fs-4 fw-bold">@Model.TotalOrders</p>
    </div>

    <div class="mb-4">
        <h5 class="text-primary"><i class="bi bi-cash-coin"></i> Total Sales:</h5>
        <p class="fs-4 fw-bold text-success">@Model.TotalSales.ToString("C")</p>
    </div>

    <div class="mb-4">
        <h5 class="text-primary"><i class="bi bi-pie-chart-fill"></i> Sales by Category:</h5>
        @if (Model.SalesByCategory != null && Model.SalesByCategory.Any())
        {
            <ul class="list-group">
                @foreach (var category in Model.SalesByCategory)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @category.Key
                        <span class="badge bg-success">@category.Value.ToString("C")</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No data available</p>
        }
    </div>

    <div class="mb-4">
        <h5 class="text-primary"><i class="bi bi-box-seam"></i> Sales by Product:</h5>
        @if (Model.SalesByProduct != null && Model.SalesByProduct.Any())
        {
            <ul class="list-group">
                @foreach (var product in Model.SalesByProduct)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @product.Key
                        <span class="badge bg-primary">@product.Value units</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No data available</p>
        }
    </div>

    <div class="mb-4">
        <h5 class="text-primary"><i class="bi bi-geo-alt-fill"></i> Sales by State:</h5>
        @if (Model.SalesByState != null && Model.SalesByState.Any())
        {
            <ul class="list-group">
                @foreach (var state in Model.SalesByState)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @state.Key
                        <span class="badge bg-warning text-dark">@state.Value.ToString("C")</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No data available</p>
        }
    </div>

    <div class="mb-4">
        <h5 class="text-primary"><i class="bi bi-bar-chart-fill"></i> Orders by Status:</h5>
        @if (Model.OrdersByStatus != null && Model.OrdersByStatus.Any())
        {
            <ul class="list-group">
                @foreach (var status in Model.OrdersByStatus)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @status.Key
                        <span class="badge bg-secondary">@status.Value orders</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No data available</p>
        }
    </div>

    <div>
        <h5 class="text-primary"><i class="bi bi-currency-exchange"></i> Total Value by Status:</h5>
        @if (Model.TotalValueByStatus != null && Model.TotalValueByStatus.Any())
        {
            <ul class="list-group">
                @foreach (var status in Model.TotalValueByStatus)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @status.Key
                        <span class="badge bg-info">@status.Value.ToString("C")</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No data available</p>
        }
    </div>
</div>
